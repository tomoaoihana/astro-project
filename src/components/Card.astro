---
export interface Props {
  href?: string;
  title?: string;
  text?: string;
}

const { href, title, text } = Astro.props;
---

<article>
  <a href={href} class="card">
    <figure class="card__image">
      <img src="" alt="" />
    </figure>
    <div class="card__body">
      <h3>{title}</h3>
      <p set:html={text} />
    </div>
  </a>
</article>

<style>
  .card {
    appearance: none;
    display: grid;
    clip-path: inset(0);
    flex-direction: column;
    color: inherit;
    text-decoration: none;
    border-radius: 2.5rem;
    background-color: #fff;
    box-shadow: 0 0 1rem rgba(0, 0, 0, 0.1);
    padding: 1.5rem;
  }
</style>
